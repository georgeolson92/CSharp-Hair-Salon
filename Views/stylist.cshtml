<h1>Hair Salon</h1>
<h2>@Model["stylist"].GetName()'s Client List</h2>

<ul>
@if (Model["clients"].Count != 0)
{
  @foreach (var client in Model["clients"])
  {
    <li>@client.GetName()</li>
    <form action='/stylists/@Model["stylist"].GetId()/clients/edit' method='post'>
      <input name="clientName" value=@client.GetId() type="hidden">
      <button type="submit">Edit</button>
    </form>
    <form action='/stylists/@Model["stylist"].GetId()/clients/delete' method='post'>
      <input type="hidden" name="_method" value="DELETE">
      <input name="clientName" value=@client.GetId() type="hidden">
      <button type="submit">Remove</button>
    </form>
  }
}
else
{
  <p>No clients.</p>
}
</ul>

<h3>Add new client:</h3>
<form action='/stylists/@Model["stylist"].GetId()/clients/new' method='post'>
  <label for="clientName">Client Name:</label>
  <input name="clientName">
  <input value=@Model["stylist"].GetId() type="hidden">
  <button type="submit">Add new cient!</button>
</form>
